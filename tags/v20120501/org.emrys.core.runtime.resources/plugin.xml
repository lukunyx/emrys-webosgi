<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="resPlublishService" name="resources to published in the web file service" schema="schema/resPlublishService.exsd"/>
   <extension-point id="resUploadService" name="upload fild recievers" schema="schema/resUploadService.exsd"/>
   <extension
         id="org.emrys.core.runtime.resources.defaultfroot"
         name="OSGI Web Application&apos;s default root."
         point="org.emrys.core.runtime.resources.resPlublishService">
      <folder
            alias="/"
            path="/"
            quik-visit-id="osgiroot">
         <filter
               included="true"
               pattern="WEB-INF">
         </filter>
      </folder>
      <authority
            id="org.emrys.core.runtime.resources.extension.DefaultResourceVisitController"
            visit-controller="org.emrys.core.runtime.resources.extension.DefaultResourceVisitController">
      </authority>
   </extension>
   <extension
         point="org.emrys.core.runtime.resources.resUploadService">
      <reciever
            class="org.emrys.core.runtime.resources.extension.DefaultUploadFileReciever"
            id="org.emrys.core.runtime.resources.reciever"
            name="The default reciever of upload file which will save the file in default directory and record."
            priority="0">
      </reciever>
   </extension>

</plugin>
